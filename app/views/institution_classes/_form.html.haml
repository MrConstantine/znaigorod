.ym-form.ym-columnar
  = semantic_form_for resource do |f|
    = f.inputs do
      = f.input :title, :label => 'Класс заведения', :wrapper_html => {:class => 'ym-fbox-text'}
    .ym-fbox-button
      = button_tag 'Сохранить', :class => 'ym-button ym-save'
      - if resource.persisted?
        = link_to 'Удалить', resource_path(resource), :method => :delete, :class =>'ym-button ym-delete'
      - else
        = link_to 'Отмена', collection_path, :class =>'ym-button'
